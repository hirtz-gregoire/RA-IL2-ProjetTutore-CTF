<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="display.controllers.MapEditor.MapCreatorController">
    <center>
        <HBox>
            <GridPane fx:id="gridPaneMapTeam"></GridPane>
            <GridPane fx:id="gridPaneMapCellType"></GridPane>
        </HBox>
    </center>

    <right>
        <VBox>
            <HBox>
                <ImageView fx:id="imageViewWallButton"></ImageView>
                <Button fx:id="mur" onAction="#setSelectedCellType">Mur</Button>
            </HBox>
            <HBox>
                <ImageView fx:id="imageViewGroundButton"></ImageView>
                <Button fx:id="ground" onAction="#setSelectedCellType">Vide</Button>
            </HBox>
            <HBox>
                <ImageView fx:id="imageViewFlagButton"></ImageView>
                <Button fx:id="flag" onAction="#setSelectedCellType">Drapeau</Button>
            </HBox>
            <HBox>
                <ImageView fx:id="imageViewSpawnButton"></ImageView>
                <Button fx:id="spawn" onAction="#setSelectedCellType">Spawn</Button>
            </HBox>
        </VBox>
    </right>

    <bottom>
        <Button onAction="#saveMap">Enregistrer la carte</Button>
    </bottom>
</BorderPane>
