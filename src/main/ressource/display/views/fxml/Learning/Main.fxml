<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="display.controllers.Learning.MainController">
    <top>
        <HBox fx:id="borderTop">
            <Label>Main</Label>
        </HBox>

    </top>

    <left>
        <VBox fx:id="buttons">
            <Button onAction="#buttonExit">Exit</Button>
            <Button onAction="#buttonSaveNN">Sauvegarder le meilleur réseau de la dernière génération</Button>
            <Label fx:id="labelSauvegarde"></Label>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="graphique"></StackPane>
    </center>
</BorderPane>
